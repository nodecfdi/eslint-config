{
  "name": "@nodecfdi/eslint-config",
  "description": "Configuraci√≥n base de Eslint para proyectos NodeCfdi",
  "version": "2.4.3",
  "type": "module",
  "module": "./build/nodecfdi_config.js",
  "types": "./build/nodecfdi_config.d.ts",
  "files": [
    "build"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./build/nodecfdi_config.d.ts",
        "default": "./build/nodecfdi_config.js"
      }
    },
    "./types": {
      "import": {
        "types": "./build/types.d.ts",
        "default": "./build/types.js"
      }
    }
  },
  "scripts": {
    "prepare": "is-in-ci || husky",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "del-cli build",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "prebuild": "pnpm run format:check && pnpm run typecheck",
    "build": "pnpm run clean && tsup-node",
    "release": "np",
    "version": "pnpm run build && pnpm run changelog"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@nodecfdi/prettier-config": "^1.4.0",
    "@nodecfdi/tsconfig": "^1.7.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.10.10",
    "auto-changelog": "^2.5.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "is-in-ci": "^1.0.0",
    "np": "^10.2.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.6",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@adonisjs/eslint-plugin": "^2.0.0-beta.5",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@eslint/js": "^9.19.0",
    "@stylistic/eslint-plugin-ts": "^3.0.0",
    "@vitest/eslint-plugin": "^1.1.25",
    "eslint-config-flat-gitignore": "^1.0.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.14.0",
    "typescript-eslint": "^8.21.0",
    "vue-eslint-parser": "^9.4.3"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "typescript": "^5.5.4"
  },
  "author": "Fernando Isidro <luffynando@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/nodecfdi/eslint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodecfdi/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/nodecfdi/eslint-config/issues"
  },
  "keywords": [
    "eslint",
    "eslint_config",
    "nodecfdi",
    "shared",
    "config"
  ],
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.15.4",
  "pnpm": {
    "overrides": {
      "eslint-import-resolver-typescript>eslint-plugin-import": "-"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": "@nodecfdi/prettier-config/pkg",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "auto-changelog": {
    "template": "keepachangelog",
    "hideCredit": true
  },
  "np": {
    "message": "chore(release): :tada: %s",
    "tag": "latest",
    "branch": "main",
    "yolo": true
  },
  "tsup": {
    "entry": [
      "./src/nodecfdi_config.ts",
      "./src/types.ts"
    ],
    "outDir": "./build",
    "clean": false,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  }
}
