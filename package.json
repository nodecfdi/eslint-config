{
  "name": "@nodecfdi/eslint-config",
  "description": "Configuraci√≥n base de Eslint para proyectos NodeCfdi",
  "version": "3.0.0",
  "type": "module",
  "module": "./build/nodecfdi_config.js",
  "types": "./build/nodecfdi_config.d.ts",
  "files": [
    "build"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./build/nodecfdi_config.d.ts",
        "default": "./build/nodecfdi_config.js"
      }
    },
    "./types": {
      "import": {
        "types": "./build/types.d.ts",
        "default": "./build/types.js"
      }
    }
  },
  "scripts": {
    "prepare": "is-in-ci || husky",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "del-cli build",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "prebuild": "pnpm run format:check && pnpm run typecheck",
    "build": "pnpm run clean && tsup-node",
    "release": "np",
    "version": "pnpm run build && pnpm run changelog"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@nodecfdi/prettier-config": "^1.4.1",
    "@nodecfdi/tsconfig": "^1.7.4",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.13.10",
    "auto-changelog": "^2.5.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.21.0",
    "husky": "^9.1.7",
    "is-in-ci": "^1.0.0",
    "np": "^10.2.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@adonisjs/eslint-plugin": "^2.0.0-beta.5",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@eslint/js": "^9.22.0",
    "@stylistic/eslint-plugin-ts": "^4.2.0",
    "@typescript-eslint/utils": "^8.26.1",
    "@vitest/eslint-plugin": "^1.1.36",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-n": "^17.16.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^57.0.0",
    "eslint-plugin-vue": "^10.0.0",
    "globals": "^16.0.0",
    "typescript-eslint": "^8.26.1",
    "vue-eslint-parser": "^10.1.1"
  },
  "peerDependencies": {
    "eslint": "^9.21.0",
    "typescript": "^5.7.3"
  },
  "author": "Fernando Isidro <luffynando@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/nodecfdi/eslint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodecfdi/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/nodecfdi/eslint-config/issues"
  },
  "keywords": [
    "eslint",
    "eslint_config",
    "nodecfdi",
    "shared",
    "config"
  ],
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.6.2",
  "pnpm": {
    "overrides": {
      "eslint-import-resolver-typescript>eslint-plugin-import": "-"
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": "@nodecfdi/prettier-config/pkg",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "auto-changelog": {
    "template": "keepachangelog",
    "hideCredit": true
  },
  "np": {
    "message": "chore(release): :tada: %s",
    "tag": "latest",
    "branch": "main",
    "yolo": true
  },
  "tsup": {
    "entry": [
      "./src/nodecfdi_config.ts",
      "./src/types.ts"
    ],
    "outDir": "./build",
    "clean": false,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  }
}
