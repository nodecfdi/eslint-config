{
  "name": "@nodecfdi/eslint-config",
  "description": "Configuraci√≥n base de Eslint para proyectos NodeCfdi",
  "version": "2.2.3",
  "type": "module",
  "module": "./dist/esm/nodecfdi_config.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/nodecfdi_config.d.ts",
        "default": "./dist/esm/nodecfdi_config.js"
      }
    },
    "./types": {
      "import": {
        "types": "./dist/esm/types.d.ts",
        "default": "./dist/esm/types.js"
      }
    }
  },
  "imports": {
    "#src/*": "./src/*.js"
  },
  "scripts": {
    "prepare": "is-in-ci || husky",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "prebuild": "pnpm format:check && pnpm typecheck",
    "build": "tshy",
    "release": "np",
    "version": "pnpm run build && pnpm run changelog"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@nodecfdi/prettier-config": "^1.3.1",
    "@nodecfdi/tsconfig": "^1.7.2",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.9.0",
    "auto-changelog": "^2.5.0",
    "eslint": "^9.9.1",
    "husky": "^9.1.6",
    "is-in-ci": "^1.0.0",
    "np": "^10.0.7",
    "prettier": "^3.3.3",
    "tshy": "^3.0.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@adonisjs/eslint-plugin": "^2.0.0-beta.5",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@eslint/js": "^9.15.0",
    "@stylistic/eslint-plugin-ts": "^2.10.1",
    "@vitest/eslint-plugin": "^1.1.10",
    "eslint-config-flat-gitignore": "^0.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import-x": "^4.4.2",
    "eslint-plugin-n": "^17.13.2",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^2.0.4",
    "eslint-plugin-unicorn": "^56.0.0",
    "eslint-plugin-vue": "^9.31.0",
    "globals": "^15.12.0",
    "typescript-eslint": "^8.14.0",
    "vue-eslint-parser": "^9.4.3"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "typescript": "^5.5.4"
  },
  "overrides": {
    "eslint-plugin-import": "npm:@favware/skip-dependency@latest"
  },
  "author": "Fernando Isidro <luffynando@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/nodecfdi/eslint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodecfdi/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/nodecfdi/eslint-config/issues"
  },
  "keywords": [
    "eslint",
    "eslint_config",
    "nodecfdi",
    "shared",
    "config"
  ],
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.13.2",
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "eslint",
        "@typescript-eslint/parser"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": "@nodecfdi/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "auto-changelog": {
    "template": "keepachangelog",
    "hideCredit": true
  },
  "np": {
    "message": "chore(release): :tada: %s",
    "tag": "latest",
    "branch": "main",
    "yolo": true
  },
  "tshy": {
    "selfLink": false,
    "dialects": [
      "esm"
    ],
    "exports": {
      ".": "./src/nodecfdi_config.ts",
      "./types": "./src/types.ts"
    }
  }
}
